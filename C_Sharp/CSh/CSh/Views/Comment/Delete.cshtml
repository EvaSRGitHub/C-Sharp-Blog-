@model CSh.Models.Comment

@{
    ViewBag.Title = "DeleteComment";
}

<div class="container">
    <div class="well">
        <h2>Delete Comment</h2>
        @using (Html.BeginForm("Delete", "Comment", FormMethod.Post, new { Id = Model.Id, @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
           

            <div class="form-group">
                @Html.LabelFor(m => m.CommentContent, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.CommentContent, new { @class = "form-control", @readonly = "readonly", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Article", new { id = Model.ArticleId }, new {@class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>


