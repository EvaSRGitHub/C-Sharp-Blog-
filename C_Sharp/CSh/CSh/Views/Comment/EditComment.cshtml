@model CSh.Models.CommentViewModels

@{
    ViewBag.Title = "EditComment";
}

<div class="container">
    <div class="well">
        <h2>Edit Comment</h2>
        @using (Html.BeginForm("Edit", "Comment", FormMethod.Post, new { Id = Model.Id, @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.HiddenFor(m=>m.Id)
            @Html.HiddenFor(m => m.UserId)

           
            <div class="form-group">
                @Html.LabelFor(m => m.CommentContent, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.CommentContent, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Article", new { id = Model.ArticleId }, new { @class = "btn btn-default" })
                    <input type="submit" value="Edit" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>


